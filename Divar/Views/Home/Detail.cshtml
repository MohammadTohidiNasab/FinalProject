@model Advertisement

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @Model.Title</title>
    <link rel="stylesheet" href="~/css/detail.css">
</head>


<body>
    <div class="container">
        <img src="@Model.ImageUrl" alt="@Model.Title " class="article-image" loading="lazy">
        <h1 class="article-title"> @Model.Title</h1>
        <p class="@Model.Content">
            @Model.Content
        </p>
        <h6> <b>قیمت :</b>  @Model.Price  </h6>

        <h6>@Model.User?.FirstName @Model.User?.LastName<b>: نام منتشر کننده اگهی  </b> </h6>
        <h6><b> اطلاعات تماس :</b> @Model.User?.PhoneNumber</h6> 


        <div class="button-group">
            <a class="btn" asp-action="Index">بازگشت به لیست اگهی ها</a>
            @if (Context.Session.GetInt32("UserId") == Model.UserId && Context.Session.GetString("UserEmail") != null)
            {
                <a class="btn" asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id">ویرایش اگهی</a>
                <a class="btn btn-delete" asp-action="Delete" asp-controller="Home" asp-route-id="@Model.Id">حذف اگهی</a>
            }
        </div>



    </div>
</body>
</html> 

