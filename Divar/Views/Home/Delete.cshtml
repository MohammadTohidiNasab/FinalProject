@model Divar.Models.Advertisement

<h2 style="text-align: center;">Delete Advertisement</h2>

<h3 style="text-align: center;">Are you sure you want to delete this advertisement?</h3>

<div style="display: flex; flex-direction: column; align-items: center;">
    <h4>@Model.Title</h4>
    <div style="text-align: center;">
        <p>@Model.Content</p>
        <p>Price: @Model.Price</p>
        <p>Category: @Model.Category</p>
        <p>Published Date: @Model.CreatedDate</p>
    </div>

    <form asp-action="Delete" method="post" style="text-align: center;">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"> Delete </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
